{{- /* INPUT PARAMETERS */ -}}
{{- /* . = Page data in Hestia Structure */ -}}




{{- /* prepare working variables for this function */ -}}
{{- $Page := partial "Hestia/functions/data/Clean" . -}}
{{- $Page = merge $Page (dict "JS" false) -}}
{{- $Page = merge $Page (dict "JS" dict) -}}
{{- $list := slice -}}
{{- $dataList := dict -}}
{{- $console := dict -}}
{{- $data := dict -}}
{{- $ret := false -}}




{{- /* process all .IncludeFirst */ -}}
{{- $dataList = true -}}
{{- if not .JS.Settings -}}
	{{- $dataList = false -}}
{{- end -}}
{{- $dataList = dict "IncludeFirst" $dataList -}}




{{- /* process all .IncludeTiming */ -}}
{{- $ret = merge $Page (dict "Input" (dict "Data" .JS.Settings.Inline.Timing)) -}}
{{- $ret = partial "Hestia/functions/data/string/Init" $ret -}}
{{- if $ret.Console -}}
	{{- $console = printf "JS.Settings.Inline.Timing: %v" $ret.Console.Message -}}
	{{- $console = merge $Page (dict "Console" (dict "Message" $console)) -}}
	{{- partial "Hestia/functions/console/Errorf" $console -}}
	{{- $ret = "defer" -}}
{{- else -}}
	{{- $ret = lower (partial "Hestia/functions/data/string/TrimWhitespace" $ret.Output) -}}
{{- end -}}


{{- if eq $ret "defer" -}}
	{{- /* PASS */ -}}
{{- else if eq $ret "sync" -}}
	{{- /* PASS */ -}}
{{- else if eq $ret "async" -}}
	{{- /* PASS */ -}}
{{- else -}}
	{{- $console = printf "JS.Settings.Inline.Timing: unknown value '%v'.\n" $ret -}}
	{{- $console = merge $Page (dict "Console" (dict "Message" $console)) -}}
	{{- partial "Hestia/functions/console/Errorf" $console -}}
	{{- $ret = "defer" -}}
{{- end -}}
{{- $dataList = merge $dataList (dict "Settings" (dict "Inline" (dict "Timing" $ret))) -}}




{{- /* process all .Include */ -}}
{{- $list = slice -}}
{{- range $i, $v := .JS.Include -}}
	{{- $data = dict -}}


	{{- if not $v.URL -}}
		{{- continue -}}
	{{- end -}}


	{{- /* process .URL */ -}}
	{{- $ret = merge $Page (dict "Input" (dict "URL" $v.URL)) -}}
	{{- $ret = partial "Hestia/functions/data/url/Init" $ret -}}
	{{- if $ret.Console -}}
		{{- $console = printf "JS.Include.%v.URL: %v" $i $ret.Console.Message -}}
		{{- $console = merge $Page (dict "Console" (dict "Message" $console)) -}}
		{{- partial "Hestia/functions/console/Errorf" $console -}}
		{{- continue -}}
	{{- end -}}
	{{- $data = merge $data (dict "URL" $ret.Output) -}}


	{{- /* process .Timing */ -}}
	{{- $ret = merge $Page (dict "Input" (dict "Data" $v.Timing)) -}}
	{{- $ret = partial "Hestia/functions/data/string/Init" $ret -}}
	{{- if $ret.Console -}}
		{{- $console = printf "JS.Include.%v.Timing: %v" $i $ret.Console.Message -}}
		{{- $console = merge $Page (dict "Console" (dict "Message" $console)) -}}
		{{- partial "Hestia/functions/console/Errorf" $console -}}
		{{- continue -}}
	{{- end -}}
	{{- $ret = partial "Hestia/functions/data/string/TrimWhitespace" $ret.Output -}}
	{{- $ret = lower $ret -}}

	{{- if eq $ret "defer" -}}
		{{- /* PASS */ -}}
	{{- else if eq $ret "async" -}}
		{{- /* PASS */ -}}
	{{- else if eq $ret "sync" -}}
		{{- /* PASS */ -}}
	{{- else -}}
		{{- $console = printf "JS.Include.%v.Timing: unknown value '%v'.\n" $i $ret -}}
		{{- $console = merge $Page (dict "Console" (dict "Message" $console)) -}}
		{{- partial "Hestia/functions/console/Errorf" $console -}}
		{{- $ret = "defer" -}}
	{{- end -}}
	{{- $data = merge $data (dict "Timing" $ret) -}}


	{{- $list = append $data $list -}}
{{- end -}}
{{- $dataList = merge $dataList (dict "Include" $list) -}}




{{- /* process Inline JS */ -}}
{{- /* process list of components JS files */ -}}
{{- $list = "" -}}
{{- range $k, $v := .Components -}}
	{{- if $list -}}
		{{- $list = printf "%s\n" $list -}}
	{{- end -}}
	{{- $ret = string (partial (printf "%s.js" $v.Path)) -}}

	{{- $list = printf "%s%s" $list $ret -}}
{{- end -}}


{{- /* process all .Inline */ -}}
{{- range $i, $v := .JS.Inline -}}
	{{- if not $v -}}
		{{- continue -}}
	{{- end -}}

	{{- $ret = merge $Page (dict "Input" (dict "Data" $v)) -}}
	{{- $ret = partial "Hestia/functions/data/string/Init" $ret -}}
	{{- if $ret.Console -}}
		{{- $console = printf "JS.Inline.%v: %v" $i $ret.Console.Message -}}
		{{- $console = merge $Page (dict "Console" (dict "Message" $console)) -}}
		{{- partial "Hestia/functions/console/Errorf" $console -}}
		{{- continue -}}
	{{- end -}}
	{{- $ret = partial "Hestia/functions/data/string/TrimWhitespace" $ret.Output -}}

	{{- /* process relative pathing */ -}}
	{{- if not (hasPrefix $ret "assets") -}}
		{{- $ret = path.Join $Page.Filesystem.Directory $ret -}}
	{{- end -}}

	{{- /* validate asset file is there */ -}}
	{{- if not (partial "Hestia/functions/data/filesystem/IsFileExists" $ret) -}}
		{{- $console = printf "JS.Inline.%v: missing asset file '%v'.\n" $i $ret -}}
		{{- $console = merge $Page (dict "Console" (dict "Message" $console)) -}}
		{{- partial "Hestia/functions/console/Errorf" $console -}}
		{{- continue -}}
	{{- end -}}

	{{- /* parse file */ -}}
	{{- $ret = merge $Page (dict "Input" (dict "Path" $ret)) -}}
	{{- $ret = partial "Hestia/functions/data/filesystem/ParseFile" $ret -}}
	{{- if $ret.Console -}}
		{{- $console = printf "JS.Inline.%v: %v" $i $ret.Console.Message -}}
		{{- $console = merge $Page (dict "Console" (dict "Message" $console)) -}}
		{{- partial "Hestia/functions/console/Errorf" $console -}}
		{{- continue -}}
	{{- end -}}
	{{- $ret = string $ret.Output -}}

	{{- $list = printf "%s%s" $list $ret -}}
{{- end -}}


{{- /* process page control inline JS file */ -}}
{{- $ret = merge $Page (dict "Input" (dict "Data" .JS.Main)) -}}
{{- $ret = partial "Hestia/functions/data/string/Init" $ret -}}
{{- if $ret.Console -}}
	{{- $console = printf "JS.Inline.__content.hestiaJS: %v" $ret.Console.Message -}}
	{{- $console = merge $Page (dict "Console" (dict "Message" $console)) -}}
	{{- partial "Hestia/functions/console/Errorf" $console -}}
	{{- $ret = "" -}}
{{- else -}}
	{{- $ret = partial "Hestia/functions/data/string/TrimWhitespace" $ret.Output -}}
{{- end -}}

{{- if not $ret -}}
	{{- /* DO NOTHING */ -}}
{{- else if not (partial "Hestia/functions/data/filesystem/IsFileExists" $ret) -}}
	{{- $ret = "" -}}
{{- end -}}

{{- if $ret -}}
	{{- $ret = merge $Page (dict "Input" (dict "Path" $ret)) -}}
	{{- $ret = partial "Hestia/functions/data/filesystem/ParseFile" $ret -}}
	{{- if $ret.Console -}}
		{{- $console = printf "JS.Inline.__content.hestiaJS: %v" $ret.Console.Message -}}
		{{- $console = merge $Page (dict "Console" (dict "Message" $console)) -}}
		{{- partial "Hestia/functions/console/Errorf" $console -}}
		{{- $ret = "" -}}
	{{- else -}}
		{{- $ret = $ret.Output -}}
	{{- end -}}
{{- end -}}

{{- if $ret -}}
	{{- $ret = merge $Page (dict "Input" (dict "Data" $ret)) -}}
	{{- $ret = partial "Hestia/functions/data/string/Init" $ret -}}
	{{- if $ret.Console -}}
		{{- $console = printf "JS.Inline.__content.hestiaJS: %v" $ret.Console.Message -}}
		{{- $console = merge $Page (dict "Console" (dict "Message" $console)) -}}
		{{- partial "Hestia/functions/console/Errorf" $console -}}
		{{- $ret = "" -}}
	{{- else -}}
		{{- $ret = partial "Hestia/functions/data/string/TrimWhitespace" $ret.Output -}}
	{{- end -}}
{{- end -}}

{{- if $ret -}}
	{{- $list = printf "%s%s" $list $ret -}}
{{- end -}}

{{- $ret = printf "deletable-inline-js.css" (sha256 $list) -}}
{{- $ret = resources.FromString $ret $list -}}
{{- if not .IsServerMode -}}
	{{- $ret = resources.Minify $ret -}}
{{- end -}}
{{- $ret = string $ret.Content -}}

{{- $dataList = merge $dataList (dict "Inline" $list) -}}




{{- /* render output */ -}}
{{- return merge $Page (dict "JS" $dataList) -}}
