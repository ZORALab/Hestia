{{- /* INPUT PARAMETERS */ -}}
{{- /* .  = Hugo data structure  */ -}}

{{- /* CONSTANTS */ -}}
{{- $CONFIG_FILENAME := ".page.toml" -}}
{{- $TIME_FORMAT := "Mon 02 Jan 2006 15:04:05 PM -07" -}}




{{- /* prepare working variables for this function */ -}}
{{- $dataList := dict -}}
{{- $data := false -}}
{{- $ret := false -}}




{{- /* process .Current */ -}}
{{- $ret = now.Format $TIME_FORMAT -}}
{{- $dataList = merge $dataList (dict "Current" $ret) -}}




{{- /* process .Updated */ -}}
{{- $ret = .Page.Lastmod -}}
{{- if $ret -}}
	{{- $ret = $ret.Format $TIME_FORMAT -}}
{{- else -}}
	{{- $ret = $dataList.Current -}}
{{- end -}}
{{- $dataList = merge $dataList (dict "Updated" $ret) -}}




{{- /* source from page data file */ -}}
{{- if .Page.File -}}
	{{- /* get Page directory path */ -}}
	{{- $data = path.Join (path.Dir .Page.File.Path) $CONFIG_FILENAME -}}
	{{- $data = path.Clean $data -}}


	{{- /* source the data file */ -}}
	{{- if fileExists $data -}}
		{{- $data = readFile $data -}}
		{{- $data = transform.Unmarshal $data -}}
		{{- if $data.Date -}}
			{{- $data = $data.Date -}}
		{{- else -}}
			{{- $data = dict "Created" "" "Published" "" -}}
		{{- end -}}
	{{- end -}}
{{- else -}}
	{{- $data = dict "Created" "" "Published" "" -}}
{{- end -}}




{{- /* process .Created */ -}}
{{- $ret = default $dataList.Current $data.Created -}}
{{- $dataList = merge $dataList (dict "Created" $ret) -}}




{{- /* process .Published */ -}}
{{- $ret = default $dataList.Current $data.Published -}}
{{- $dataList = merge $dataList (dict "Published" $ret) -}}




{{- /* render output */ -}}
{{- return dict "Time" $dataList -}}
