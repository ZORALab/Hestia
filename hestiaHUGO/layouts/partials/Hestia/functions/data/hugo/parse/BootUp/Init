{{- /* INPUT PARAMETERS */ -}}
{{- /* . = Hugo data structure */ -}}

{{- /* CONSTANTS */ -}}
{{- $KEY_BOOT := "Boot" -}}




{{- /* prepare variables for function */ -}}
{{- $dataList := dict -}}
{{- $ret := true -}}




{{- /* execute function.
	NOTE: only runs on 'first boot' or 'on request' for initialize the
	persistent memory of the repository.
*/ -}}
{{- $ret = .Store.Get $KEY_BOOT -}}
{{- if not $ret -}}
	{{- $dataList = partial "Hestia/functions/data/hugo/parse/BootUp/_scanAll" . -}}
	{{- .Store.Set $KEY_BOOT true -}}
{{- end -}}




{{- /* render output */ -}}
{{- return $dataList -}}
