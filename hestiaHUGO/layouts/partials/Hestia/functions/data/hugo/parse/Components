{{- /* INPUT PARAMETERS */ -}}
{{- /* . = Hugo data structure */ -}}

{{- /* CONSTANTS */ -}}
{{- $CONFIG_FILENAME := ".components.toml" -}}




{{- /* prepare working variables for this function */ -}}
{{- $Local := dict -}}
{{- $dataList := dict -}}
{{- $data := false -}}
{{- $ret := false -}}




{{- /* parse local config file */ -}}
{{- if .Page.File -}}
	{{- $Local = path.Join (path.Dir .Page.File.Path) $CONFIG_FILENAME -}}
	{{- $Local = path.Clean $Local -}}
	{{- $Local = partial "Hestia/functions/data/hugo/parse/__dataFile" $Local -}}
{{- end -}}




{{- /* source site-level components list */ -}}
{{- $dataList = dict -}}
{{- range $k, $v := .Site.Data.Hestia.Components -}}
	{{- $data = dict -}}


	{{- if not (index $v "Include") -}}
		{{- continue -}}
	{{- end -}}
	{{- $data = merge $data (dict "Include" true) -}}


	{{- /* process component's variables */ -}}
	{{- $ret = dict -}}
	{{- range $j, $w := $v.Variables -}}
		{{- $ret = merge $ret (dict (string $j) (string $w)) -}}
	{{- end -}}
	{{- $data = merge $data (dict "Variables" $ret) -}}


	{{- /* add to datalist */ -}}
	{{- $dataList = merge $dataList (dict (string $k) $data) -}}
{{- end -}}




{{- /* source page-level components list */ -}}
{{- range $k, $v := $Local -}}
	{{- $data = dict -}}


	{{- if not (index $v "Include") -}}
		{{- if index $dataList (string $k) -}}
			{{- $ret = dict (string $k) (dict "Include" false) -}}
			{{- $dataList = merge $dataList $ret -}}
		{{- end -}}

		{{- continue -}}
	{{- end -}}


	{{- /* process component's variables */ -}}
	{{- $ret = dict -}}
	{{- range $j, $w := $v.Variables -}}
		{{- $ret = merge $ret (dict (string $j) (string $w)) -}}
	{{- end -}}
	{{- $data = merge $data (dict "Variables" $ret) -}}


	{{- /* add to datalist */ -}}
	{{- $dataList = merge $dataList (dict (string $k) $data) -}}
{{- end -}}




{{- /* render output */ -}}
{{- return dict "Components" $dataList -}}
