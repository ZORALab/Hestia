{{- /* INPUT PARAMETERS */ -}}
{{- /* . = Page data in Hestia Structure */ -}}
{{- /* .Input.Data = boolean for processing */ -}}




{{- /* prepare working variables for this function */ -}}
{{- $Page := partial "Hestia/functions/data/Clean" . -}}
{{- $dataList := false -}}
{{- $console := dict -}}




{{- /* standardize boolean data */ -}}
{{- $dataList = merge . (dict "Input" (dict "Query" ".Input.Data")) -}}
{{- $dataList = partial "Hestia/functions/data/Get" $dataList -}}
{{- if not $dataList -}}
	{{- $dataList = false -}}
{{- end -}}


{{- if partial "Hestia/functions/data/boolean/IsBoolean" $dataList -}}
	{{- /* DO NOTHING */ -}}
{{- else if partial "Hestia/functions/data/string/IsString" $dataList -}}
	{{- if eq (lower $dataList) "true" -}}
		{{- $dataList = true -}}
	{{- else if eq (lower $dataList) "false" -}}
		{{- $dataList = false -}}
	{{- else -}}
		{{- $console = printf "boolean: given data is not a bool: '%v'\n" $dataList -}}
		{{- $console = dict "Message" $console -}}
		{{- $dataList = false -}}
	{{- end -}}
{{- else if partial "Hestia/functions/data/number/IsNumber" $dataList -}}
	{{- if gt $dataList 0 -}}
		{{- $dataList = true -}}
	{{- else -}}
		{{- $dataList = false -}}
	{{- end -}}
{{- else -}}
	{{- $console = printf "boolean: given data is not a boolean: '%v'\n" $dataList -}}
	{{- $console = dict "Message" $console -}}
	{{- $dataList = false -}}
{{- end -}}




{{- /* render output */ -}}
{{- return dict "Output" $dataList "Console" $console -}}
