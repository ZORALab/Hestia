{{- /* INPUT PARAMETERS */ -}}
{{- /* . = Page data in Hestia Structure */ -}}




{{- /* prepare working variables for this function */ -}}
{{- $Page := . -}}
{{- $Page = merge $Page (dict "CSS" false) -}}
{{- $Page = merge $Page (dict "CSS" dict) -}}
{{- $dataList := dict -}}
{{- $list := slice -}}
{{- $data := dict -}}
{{- $variables := dict -}}
{{- $console := false -}}
{{- $ret := false -}}




{{- /* process .IncludeFirst */ -}}
{{- $ret = true -}}
{{- if not .CSS.Settings.IncludeFirst -}}
	{{- $ret = false -}}
{{- end -}}
{{- $dataList = merge $dataList (dict "IncludeFirst" $ret) -}}




{{- /* process .Include */ -}}
{{- $list = slice -}}
{{- range $i, $v := .CSS.Include -}}
	{{- $data = dict -}}


	{{- if not $v.URL -}}
		{{- continue -}}
	{{- end -}}


	{{- /* process .URL */ -}}
	{{- $ret = merge $Page (dict "Input" (dict "URL" $v.URL)) -}}
	{{- $ret = partial "Hestia/functions/data/url/Sanitize" $ret -}}
	{{- if $ret.Console -}}
		{{- $console = printf "CSS.Include.%v.URL: %v" $i $ret.Console.Message -}}
		{{- $console = merge $Page (dict "Console" (dict "Message" $console)) -}}
		{{- partial "Hestia/functions/console/Errorf" $console -}}
		{{- continue -}}
	{{- end -}}
	{{- $data = merge $data (dict "URL" $ret.Output) -}}


	{{- /* process .Media */ -}}
	{{- $ret = merge $Page (dict "Input" (dict "Data" $v.Media)) -}}
	{{- $ret = partial "Hestia/functions/data/string/Sanitize" $ret -}}
	{{- if $ret.Console -}}
		{{- $console = printf "CSS.Include.%v.Media: %v" $i $ret.Console.Message -}}
		{{- $console = merge $Page (dict "Console" (dict "Message" $console)) -}}
		{{- partial "Hestia/functions/console/Errorf" $console -}}
		{{- continue -}}
	{{- end -}}
	{{- $data = merge $data (dict "Media" $ret.Output) -}}


	{{- /* process .URL */ -}}
	{{- $ret = merge $Page (dict "Input" (dict "Data" $v.OnLoad)) -}}
	{{- $ret = partial "Hestia/functions/data/string/Sanitize" $ret -}}
	{{- if $ret.Console -}}
		{{- $console = printf "CSS.Include.%v.OnLoad: %v" $i $ret.Console.Message -}}
		{{- $console = merge $Page (dict "Console" (dict "Message" $console)) -}}
		{{- partial "Hestia/functions/console/Errorf" $console -}}
		{{- continue -}}
	{{- end -}}
	{{- $data = merge $data (dict "OnLoad" $ret.Output) -}}


	{{- $list = append $data $list -}}
{{- end -}}
{{- $dataList = merge $dataList (dict "Include" $list) -}}




{{- /* process Inline CSS */ -}}
{{- /* process list of components CSS files */ -}}
{{- $variables = dict -}}
{{- $list = "" -}}
{{- range $k, $v := .Components -}}
	{{- /* process CSS variables */ -}}
	{{- $ret = printf "layouts/partials/%s.toml" $v.Path -}}
	{{- $ret = merge $Page (dict "Input" (dict "Path" $ret)) -}}
	{{- $ret = partial "Hestia/functions/data/io/fs/ParseDataFile" $ret -}}
	{{- if index $ret.Output "CSS" -}}
		{{- $ret = $ret.Output.CSS -}}
		{{- if index $ret "Variables" -}}
			{{- $ret = $ret.Variables -}}
		{{- else -}}
			{{- $ret = dict -}}
		{{- end -}}
	{{- end -}}

	{{- if $ret -}}
		{{- $ret = merge $ret $v.Variables -}}
	{{- else -}}
		{{- $ret = $v.Variables -}}
	{{- end -}}
	{{- $variables = merge $variables $ret -}}

	{{- /* process CSS */ -}}
	{{- $ret = string (partial (printf "%s.css" $v.Path)) -}}
	{{- $list = printf "%s%s" $list $ret -}}
{{- end -}}

{{- $ret = "" -}}
{{- range $k, $v := $variables -}}
	{{- if $ret -}}
		{{- $ret = printf "%s\n" $ret -}}
	{{- end -}}

	{{- $ret = printf "%s\t\t%s: %v;" $ret $k $v -}}
{{- end -}}
{{- if $ret -}}
	{{- $list = printf ":root{\n%s\n}\n\n%s" $ret $list -}}
{{- end -}}


{{- /* process list of inline CSS files */ -}}
{{- range $i, $v := .CSS.Inline -}}
	{{- if not $v -}}
		{{- continue -}}
	{{- end -}}


	{{- $ret = merge $Page (dict "Input" (dict "Data" $v)) -}}
	{{- $ret = partial "Hestia/functions/data/string/Sanitize" $ret -}}
	{{- if $ret.Console -}}
		{{- $console = printf "CSS.Inline.%v: %v" $i $ret.Console.Message -}}
		{{- $console = merge $Page (dict "Console" (dict "Message" $console)) -}}
		{{- partial "Hestia/functions/console/Errorf" $console -}}
		{{- continue -}}
	{{- end -}}
	{{- $ret = partial "Hestia/functions/data/string/TrimWhitespace" $ret.Output -}}


	{{- /* process relative pathing */ -}}
	{{- if not (hasPrefix $ret "assets") -}}
		{{- $ret = path.Join $Page.Filesystem.Directory $ret -}}
	{{- end -}}


	{{- /* validate asset file is there */ -}}
	{{- if not (partial "Hestia/functions/data/io/fs/IsFileExists" $ret) -}}
		{{- $console = printf "CSS.Inline.%v: missing asset file '%v'.\n" $i $ret -}}
		{{- $console = merge $Page (dict "Console" (dict "Message" $console)) -}}
		{{- partial "Hestia/functions/console/Errorf" $console -}}
		{{- continue -}}
	{{- end -}}


	{{- /* parse file */ -}}
	{{- $ret = merge $Page (dict "Input" (dict "Path" $v)) -}}
	{{- $ret = partial "Hestia/functions/data/io/fs/ParseFile" $ret -}}
	{{- if $ret.Console -}}
		{{- $console = printf "CSS.Inline.%v: %v" $i $ret.Console.Message -}}
		{{- $console = merge $Page (dict "Console" (dict "Message" $console)) -}}
		{{- partial "Hestia/functions/console/Errorf" $console -}}
		{{- continue -}}
	{{- end -}}
	{{- $ret = string $ret.Output -}}

	{{- $list = printf "%s%s" $list $ret -}}
{{- end -}}


{{- /* process page control inline CSS file */ -}}
{{- $ret = merge $Page (dict "Input" (dict "Data" .CSS.Main)) -}}
{{- $ret = partial "Hestia/functions/data/string/Sanitize" $ret -}}
{{- if $ret.Console -}}
	{{- $console = printf "CSS.Inline.__content.hestiaCSS: %v" $ret.Console.Message -}}
	{{- $console = merge $Page (dict "Console" (dict "Message" $console)) -}}
	{{- partial "Hestia/functions/console/Errorf" $console -}}
	{{- $ret = "" -}}
{{- else -}}
	{{- $ret = partial "Hestia/functions/data/string/TrimWhitespace" $ret.Output -}}
{{- end -}}

{{- if not $ret -}}
	{{- /* DO NOTHING */ -}}
{{- else if not (partial "Hestia/functions/data/io/fs/IsFileExists" $ret) -}}
	{{- $ret = "" -}}
{{- end -}}

{{- if $ret -}}
	{{- $ret = merge $Page (dict "Input" (dict "Path" $ret)) -}}
	{{- $ret = partial "Hestia/functions/data/io/fs/ParseFile" $ret -}}
	{{- if $ret.Console -}}
		{{- $console = printf "CSS.Inline.__content.hestiaCSS: %v" $ret.Console.Message -}}
		{{- $console = merge $Page (dict "Console" (dict "Message" $console)) -}}
		{{- partial "Hestia/functions/console/Errorf" $console -}}
		{{- $ret = "" -}}
	{{- else -}}
		{{- $ret = $ret.Output -}}
	{{- end -}}
{{- end -}}

{{- if $ret -}}
	{{- $ret = merge $Page (dict "Input" (dict "Data" $ret)) -}}
	{{- $ret = partial "Hestia/functions/data/string/Sanitize" $ret -}}
	{{- if $ret.Console -}}
		{{- $console = printf "CSS.Inline.__content.hestiaCSS: %v" $ret.Console.Message -}}
		{{- $console = merge $Page (dict "Console" (dict "Message" $console)) -}}
		{{- partial "Hestia/functions/console/Errorf" $console -}}
		{{- $ret = "" -}}
	{{- else -}}
		{{- $ret = partial "Hestia/functions/data/string/TrimWhitespace" $ret.Output -}}
	{{- end -}}
{{- end -}}

{{- if $ret -}}
	{{- $list = printf "%s%s" $list $ret -}}
{{- end -}}

{{- $ret = printf "deletable-inline-%s.css" (sha256 $list) -}}
{{- $ret = resources.FromString $ret $list -}}
{{- if not .IsServerMode -}}
	{{- $ret = resources.Minify $ret -}}
{{- end -}}
{{- $ret = string $ret.Content -}}

{{- $dataList = merge $dataList (dict "Inline" $ret) -}}




{{- /* render output */ -}}
{{- return merge $Page (dict "CSS" $dataList) -}}
