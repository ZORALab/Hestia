{{- /* INPUT PARAMETERS */ -}}
{{- /* . = Hestia data structure */ -}}
{{- /* .Input.Data = Hestia PWA's Cache data structure (dict) */ -}}




{{- /* prepare working variables for this function */ -}}
{{- $Page := . -}}
{{- $console := dict -}}
{{- $dataset := dict -}}
{{- $dataList := false -}}
{{- $ret := false -}}




{{- /* process .Input.Data */ -}}
{{- $dataset = merge . (dict "Input" (dict "Query" ".Input.Data")) -}}
{{- $dataset = partial "Hestia/functions/data/vendors/hugo/Get" $dataset -}}
{{- if not $dataset -}}
	{{- $console = dict "Message" "caches.offline: empty .Input.Data value.\n" -}}
	{{- $dataset = dict -}}
{{- else if partial "Hestia/functions/data/list/IsMap" $dataset -}}
	{{- /* PASS */ -}}
{{- else -}}
	{{- $console = printf "invalid .Input.Data type '%T'.\n" .Input.Data -}}
	{{- $console = dict "Message" $console -}}
	{{- $dataset = dict -}}
{{- end -}}




{{- /* save to persistent memory */ -}}
{{- if $dataset -}}
	{{- $dataList = $Page.Memory.Get $Page.Constants.Offline.MemKey -}}
	{{- if not $dataList -}}
		{{- $dataList = dict -}}
	{{- end -}}

	{{- range $k, $v := $dataset -}}
		{{- if not (strings.HasPrefix $k (string $Page.URL.Base)) -}}
			{{- continue -}}
		{{- end -}}

		{{- if strings.HasSuffix $k "/" -}}
			{{- range $j, $w := $Page.Formats -}}
				{{- $ret = printf "%s%s%s" $k $w.Filename $w.Extension -}}
				{{- $dataList = merge $dataList (dict $ret $v) -}}
			{{- end -}}

			{{- continue -}}
		{{- end -}}

		{{- $dataList = merge $dataList (dict $k $v) -}}
	{{- end -}}

	{{- $Page.Memory.Set $Page.Constants.Offline.MemKey $dataList -}}
{{- end -}}




{{- /* render output */ -}}
{{- return dict "Output" $dataList "Console" $console -}}
