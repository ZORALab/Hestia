{{- /* INPUT PARAMETERS */ -}}
{{- /* . = Hugo data structure */ -}}




{{- /* prepare working variables for this function */ -}}
{{- $Page := false -}}
{{- $proceed := false -}}
{{- $ret := false -}}




{{- /* generate all sitemap.xml files across each pages */ -}}
{{- range $i, $hugo := .Data.Pages -}}
	{{- $proceed = true -}}
	{{- $Page := partial "Hestia/functions/data/Page" $hugo -}}


	{{- /* discard if page is redirected */ -}}
	{{- if $Page.Redirect.Enabled -}}
		{{- $proceed = false -}}
	{{- end -}}


	{{- /* discard if it is 404 or offline pages */ -}}
	{{- range $j, $v := $Page.Languages.List -}}
		{{- if eq (string $Page.URL.Current.Absolute) (string $v.URL.ERROR_404) -}}
			{{- $proceed = false -}}
		{{- end -}}

		{{- if eq (string $Page.URL.Current.Absolute) (string $v.URL.ERROR_OFFLINE) -}}
			{{- $proceed = false -}}
		{{- end -}}
	{{- end -}}


	{{- /* skip if can't proceed */ -}}
	{{- if not $proceed -}}
		{{- continue -}}
	{{- end -}}


	{{- /* render page sitemap */ -}}
	{{- $ret = string (partial "Hestia/functions/render/xml/sitemap-page.xml" $Page) -}}
	{{- $ret = merge $Page (dict "Input"
		(dict "Content" $ret "Path" $Page.Sitemap.Path)) -}}
	{{- $ret = partial "Hestia/functions/data/filesystem/WriteFile" $ret -}}
	{{- if $ret.Console -}}
		{{- $ret = printf ".Sitemap '%v': %v" $Page.Sitemap.URL $ret.Console.Message -}}
		{{- $ret = merge $Page (dict "Console" (dict "Message" $ret)) -}}
		{{- partial "Hestia/functions/console/Errorf" $ret -}}
	{{- end -}}


	{{- /* render index sitemap */ -}}
	{{- if eq (string $Page.URL.Current.Absolute) (string $Page.URL.Base) -}}
		{{- /* return value to this file = base URL + sitemap.xml */ -}}
		{{- partial "Hestia/functions/render/xml/sitemap-index.xml" $Page -}}
	{{- else -}}
		{{- /* write to targeted sitemap file */ -}}
		{{- $ret = string (partial "Hestia/functions/render/xml/sitemap-index.xml"
			$Page) -}}
		{{- $ret = merge $Page (dict "Input"
			(dict "Content" $ret "Path" $Page.Sitemap.Index.Path)) -}}
		{{- $ret = partial "Hestia/functions/data/filesystem/WriteFile" $ret -}}
		{{- if $ret.Console -}}
			{{- $ret = printf ".Sitemap '%v': %v"
				$Page.Sitemap.URL
				$ret.Console.Message
				-}}
			{{- $ret = merge $Page (dict "Console" (dict "Message" $ret)) -}}
			{{- partial "Hestia/functions/console/Errorf" $ret -}}
		{{- end -}}
	{{- end -}}
{{- end -}}
