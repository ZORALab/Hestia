{{- safeHTML (printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\" ?>") }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
	xmlns:xhtml="http://www.w3.org/1999/xhtml">
{{- range $page := .Data.Pages -}}
	{{- $proceed := true -}}
	{{- $hestia := partial "Hestia/functions/data/Page" $page -}}




	{{- /* discard if page is redirected */ -}}
	{{- $ret := $page.Param "layout" -}}
	{{- if $hestia.Redirect.Enabled -}}
		{{- $proceed = false -}}
	{{- end -}}




	{{- /* discard if it is 404 or offline pages */ -}}
	{{- range $i, $v := $hestia.Languages.List -}}
		{{- if eq (string .URL.Current.Absolute) (string $v.URL.ERROR_404) -}}
			{{- $proceed = false -}}
		{{- end -}}


		{{- if eq (string .URL.Current.Absolute) (string $v.URL.ERROR_OFFLINE) -}}
			{{- $proceed = false -}}
		{{- end -}}
	{{- end -}}




	{{- /* skip if can't proceed */ -}}
	{{- if not $proceed -}}
		{{- continue -}}
	{{- end -}}




	{{- /* render output */}}
	<url>
		<loc>{{- safeHTML $hestia.URL.Current.Absolute -}}</loc>
		<lastmod>{{- safeHTML $hestia.Time.Updated.RFC3339 -}}</lastmod>


		{{- with $page.Sitemap.ChangeFreq }}
		<changefreq>{{- . -}}</changefreq>
		{{- end -}}


		{{- if ge $page.Sitemap.Priority 0.0 }}
		<priority>{{- $page.Sitemap.Priority -}}</priority>
		{{- end -}}


		{{- range $i, $v := $hestia.Languages.List -}}
			{{- if eq $v.Code $hestia.Languages.Current.Code -}}
				{{- continue -}}
			{{- end -}}


			{{- if eq (string $v.URL.PAGE) "" -}}
				{{- continue -}}
			{{- end }}
		<xhtml:link rel="alternate"
			hreflang="{{- safeHTML $v.Code -}}"
			href="{{- safeHTML $v.URL.PAGE -}}" />
		{{- end }}
	</url>
{{- end }}
</urlset>
