{{- /* INPUT PARAMETERS */ -}}
{{- /* . = Page data in Hestia Structure */ -}}
{{- /* .Input.Data = Dataset to store into database (dict) */ -}}
{{- /* .Input.Data.[URL.Policy] = offline caching URL:Policy (string/url:string) */ -}}




{{- /* prepare variables for this function */ -}}
{{- $Page := . -}}
{{- $dataList := dict -}}
{{- $error := "" -}}
{{- $dataset := dict -}}
{{- $data := dict -}}
{{- $ret := dict -}}




{{- /* get dataset */ -}}
{{- $dataset = default dict .Input.Data -}}
{{- if partial "hestiaLIST/IsMap" $dataset -}}
	{{- /* PASS */ -}}
{{- else if not $dataset -}}
	{{- $error = printf "empty .Input.Data value.\n" -}}
{{- else -}}
	{{- $error = printf "invalid .Input.Data type '%v'.\n" $dataset -}}
	{{- $dataset = dict -}}
{{- end -}}


{{- /* perform caching */ -}}
{{- if $dataset -}}
	{{- $dataList = partial "hestiaCOMPILERS/hestiaHUGO/loadOfflineURL" $Page -}}

	{{- range $k, $v := $dataset -}}
		{{- if not (strings.HasPrefix $k (string $Page.URL.Base)) -}}
			{{- continue -}}
		{{- end -}}

		{{- if strings.HasSuffix $k "/" -}}
			{{- range $j, $w := $Page.Formats -}}
				{{- $ret = printf "%s%s%s" $k $w.Filename $w.Extension -}}
				{{- $dataList = merge $dataList (dict $ret $v) -}}
			{{- end -}}

			{{- continue -}}
		{{- end -}}

		{{- $dataList = merge $dataList (dict $k $v) -}}
	{{- end -}}

	{{- $Page.Memory.Delete $Page.Constants.Offline.MemKey -}}
	{{- $Page.Memory.Set $Page.Constants.Offline.MemKey $dataList -}}
{{- end -}}




{{- /* render output */ -}}
{{- return dict "Error" $error -}}
