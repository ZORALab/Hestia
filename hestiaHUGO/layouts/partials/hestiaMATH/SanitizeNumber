{{- /* INPUT PARAMETERS */ -}}
{{- /* . = Page data in Hestia Structure */ -}}
{{- /* .Input.Data = number data for processing (int/float/string) */ -}}




{{- /* prepare working variables for this function */ -}}
{{- $Page := . -}}
{{- $dataList := 0 -}}
{{- $error := "" -}}




{{- /* standardizes number data */ -}}
{{- $dataList = default false .Input.Data -}}
{{- if not $dataList -}}
	{{- $dataList = 0 -}}
{{- else if partial "hestiaSTRING/IsString" $dataList -}}
	{{- $dataList = merge $Page (dict "Input" (dict "Data" $dataList)) -}}
	{{- $dataList = partial "hestiaSTRING/FormatNumber" $dataList -}}
	{{- if $dataList.Error -}}
		{{- $error = printf "math: sanitize number: %s" $dataList.Error -}}
	{{- end -}}
	{{- $dataList = $dataList.Output -}}
{{- else if partial "hestiaMATH/IsInt" $dataList -}}
	{{- $dataList = int $dataList -}}
{{- else if partial "hestiaMATH/IsFloat" $dataList -}}
	{{- $dataList = float $dataList -}}
{{- else -}}
	{{- $error = printf "number: bad .Input.Data type '%T'.\n" .Input.Data -}}
	{{- $dataList = 0 -}}
{{- end -}}




{{- /* render output */ -}}
{{- return dict "Output" $dataList "Error" $error -}}
